{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "module": "es6",
    "declaration": true,
    "outDir": "./dist",
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "dist",
    "example",
    "rollup.config.js"
  ]
}
